require "rails_helper"

module Mutations
  RSpec.describe GraphqlController, type: :controller do
    describe "<%= name.camelize %> mutation" do
      it "should do something" do
        post "/graphql", params: {query: query(<%= "#{arguments.map{|argument| "#{argument.should_quote? ? "\"" : ""}\#{#{argument.name.upcase}}#{argument.should_quote? ? "\"" : ""}" }.join(", ")}" %>)}
        mutation_response = data(response)
      end
    end

    def data(response)
      gql_response(response, "<%= name.camelize(:lower) %>")
    end

    def query(<%= "#{arguments.pluck(:name).join(", ")}" %>)
      <<~GQL
        mutation{
          <%= name.camelize(:lower) %>(input: {<%= "#{arguments.map{|argument| "#{argument.name.camelize(:lower)}: #{argument.should_quote? ? "\"" : ""}\#{#{argument.name}}#{argument.should_quote? ? "\"" : ""}" }.join(", ")}" %>}){
            status
            errors{
              property
              message
            }
          }
        }
      GQL
    end
  end
end